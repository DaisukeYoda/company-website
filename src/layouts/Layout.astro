---
import GoogleAnalytics from '../components/GoogleAnalytics.astro';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  keywords?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = 'Ludo TechnologiesはWeb3・AI・クラウドインフラの最先端技術を活用したシステム開発・技術コンサルティングの専門企業です。ブロックチェーン、機械学習、DevOpsでお客様のDXを推進します。',
  ogImage = '/images/og-default.jpg',
  keywords = 'Web3開発,AI開発,ブロックチェーン開発,システム開発,技術コンサルティング,React,Next.js,クラウドインフラ,機械学習,DevOps,DX,NFT,DeFi',
  canonicalURL = new URL(Astro.url.pathname, Astro.site).toString()
} = Astro.props;

// Google Analytics Measurement ID (環境変数から取得、なければプレースホルダー)
const GA_MEASUREMENT_ID = import.meta.env.PUBLIC_GA_MEASUREMENT_ID || 'G-XXXXXXXXXX';
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Ludo Technologies" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:site_name" content="Ludo Technologies" />
    <meta property="og:locale" content="ja_JP" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#667eea" />
    <meta name="msapplication-TileColor" content="#667eea" />
    
    <!-- Schema.org Structured Data -->
    <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Ludo Technologies",
      "alternateName": "ルドテクノロジーズ",
      "url": "https://ludo-tech.org",
      "logo": "https://ludo-tech.org/favicon.svg",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "",
        "contactType": "customer service",
        "email": "contact@ludo-tech.org",
        "availableLanguage": "Japanese"
      },
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "神奈川県",
        "addressCountry": "JP"
      },
      "sameAs": [],
      "description": "Web3・AI・クラウドインフラの最先端技術を活用したシステム開発・技術コンサルティングの専門企業です。ブロックチェーン、機械学習、DevOpsでお客様のDXを推進し、ビジネスを革新します。",
      "foundingDate": "2024",
      "founder": {
        "@type": "Person",
        "name": "余田 大典"
      },
      "serviceArea": {
        "@type": "Country",
        "name": "日本"
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "技術サービス",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "システム開発",
              "description": "Webアプリケーション、モバイルアプリ、AIシステムの開発"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "技術コンサルティング",
              "description": "技術戦略立案、アーキテクチャ設計、技術選定支援"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Web3ソリューション",
              "description": "ブロックチェーン、NFT、DeFiシステムの開発"
            }
          }
        ]
      }
    }
    </script>
    
    <!-- Google Analytics -->
    {GA_MEASUREMENT_ID !== 'G-XXXXXXXXXX' && (
      <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`} is:inline></script>
    )}
    {GA_MEASUREMENT_ID !== 'G-XXXXXXXXXX' && (
      <script is:inline define:vars={{ GA_MEASUREMENT_ID, title }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', GA_MEASUREMENT_ID, {
          page_title: title,
          custom_map: {
            'dimension1': 'page_type',
            'dimension2': 'user_type'
          }
        });
      </script>
    )}

