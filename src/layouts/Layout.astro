<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  // ScrollTriggerãƒ—ãƒ©ã‚°ã‚¤ãƒ³ã‚’ç™»éŒ²
  gsap.registerPlugin(ScrollTrigger);

  const theme = (() => {
    if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
      return localStorage.getItem('theme');
    }
    if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
      return 'dark';
    }
    return 'light';
  })();

  if (theme === 'light') {
    document.documentElement.classList.remove('dark');
  } else {
    document.documentElement.classList.add('dark');
  }

  if (theme) {
    window.localStorage.setItem('theme', theme);
  }

  const handleToggleClick = () => {
    const element = document.documentElement;
    const themeToggle = document.getElementById('theme-toggle');
    const icon = themeToggle?.querySelector('svg');
    
    element.classList.toggle('dark');
    
    const isDark = element.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    
    // ã‚¢ã‚¤ã‚³ãƒ³ã®å›è»¢ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
    if (icon) {
      gsap.to(icon, { rotation: 360, duration: 0.5, ease: "back.out(1.7)" });
    }
  };

  document.getElementById('theme-toggle')?.addEventListener('click', handleToggleClick);

  // ãƒ¢ãƒã‚¤ãƒ«ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã®åˆ¶å¾¡
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuToggle?.addEventListener('click', () => {
    const isHidden = mobileMenu?.classList.contains('hidden');
    
    if (isHidden) {
      mobileMenu?.classList.remove('hidden');
      // ã‚¹ãƒ©ã‚¤ãƒ‰ãƒ€ã‚¦ãƒ³ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
      gsap.fromTo(mobileMenu, 
        { opacity: 0, y: -20 },
        { opacity: 1, y: 0, duration: 0.3, ease: "power2.out" }
      );
    } else {
      // ã‚¹ãƒ©ã‚¤ãƒ‰ã‚¢ãƒƒãƒ—ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
      gsap.to(mobileMenu, {
        opacity: 0,
        y: -20,
        duration: 0.3,
        ease: "power2.in",
        onComplete: () => {
          mobileMenu?.classList.add('hidden');
        }
      });
    }
  });

  // ãƒŠãƒ“ã‚²ãƒ¼ã‚·ãƒ§ãƒ³ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
  document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.getElementById('navbar');
    const logo = document.getElementById('logo');
    const navLinks = document.querySelectorAll('.nav-link');

    // ãƒ­ã‚´ã®åˆæœŸã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
    gsap.fromTo(logo, 
      { opacity: 0, x: -50 },
      { opacity: 1, x: 0, duration: 1, ease: "power3.out" }
    );

    // ãƒŠãƒ“ãƒªãƒ³ã‚¯ã®åˆæœŸã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
    gsap.fromTo(navLinks,
      { opacity: 0, y: -20 },
      { 
        opacity: 1, 
        y: 0, 
        duration: 0.8, 
        stagger: 0.1,
        ease: "power3.out",
        delay: 0.3
      }
    );

    // ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«æ™‚ã®ãƒŠãƒ“ã‚²ãƒ¼ã‚·ãƒ§ãƒ³ãƒãƒ¼ã®å¤‰åŒ–
    ScrollTrigger.create({
      start: "top -100",
      end: 99999,
      onUpdate: (self) => {
        if (self.direction === 1 && self.progress > 0.1) {
          navbar?.classList.add('navbar-scrolled');
        } else {
          navbar?.classList.remove('navbar-scrolled');
        }
      }
    });

    // ãƒŠãƒ“ãƒªãƒ³ã‚¯ã®ãƒ›ãƒãƒ¼ã‚¢ãƒ‹ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³
    navLinks.forEach(link => {
      link.addEventListener('mouseenter', () => {
        gsap.to(link, { y: -2, duration: 0.3, ease: "power2.out" });
      });
      
      link.addEventListener('mouseleave', () => {
        gsap.to(link, { y: 0, duration: 0.3, ease: "power2.out" });
      });
    });
  });
</script>