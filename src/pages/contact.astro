---
import Layout from '../layouts/Layout.astro';
---

<Layout title="お問い合わせ - Ludo Technologies">
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-6 max-w-4xl">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-4 text-primary-600 dark:text-primary-400">
        お問い合わせ
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 text-center mb-12">
        プロジェクトに関するご質問やご相談はお気軽にお問い合わせください
      </p>

      <div class="grid md:grid-cols-2 gap-12 mb-12">
        <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-8">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">お問い合わせ情報</h2>
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold mb-2 text-gray-800 dark:text-gray-200">
                <span class="text-2xl mr-2">📧</span>メール
              </h3>
              <p class="text-gray-600 dark:text-gray-300">info@ludo-tech.org</p>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2 text-gray-800 dark:text-gray-200">
                <span class="text-2xl mr-2">🕰️</span>対応時間
              </h3>
              <p class="text-gray-600 dark:text-gray-300">平日 9:00 - 18:00</p>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2 text-gray-800 dark:text-gray-200">
                <span class="text-2xl mr-2">📍</span>所在地
              </h3>
              <p class="text-gray-600 dark:text-gray-300">東京都</p>
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2 text-gray-800 dark:text-gray-200">
                <span class="text-2xl mr-2">🌐</span>Webサイト
              </h3>
              <a href="https://ludo-tech.org" class="text-primary-600 dark:text-primary-400 hover:underline">
                ludo-tech.org
              </a>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-8">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">対応可能なサービス</h2>
          <ul class="space-y-3">
            <li class="flex items-start">
              <span class="text-primary-500 mr-2 text-xl">✓</span>
              <span class="text-gray-600 dark:text-gray-300">Webアプリケーション開発</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary-500 mr-2 text-xl">✓</span>
              <span class="text-gray-600 dark:text-gray-300">モバイルアプリ開発</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary-500 mr-2 text-xl">✓</span>
              <span class="text-gray-600 dark:text-gray-300">AI・機械学習システム開発</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary-500 mr-2 text-xl">✓</span>
              <span class="text-gray-600 dark:text-gray-300">ブロックチェーンソリューション</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary-500 mr-2 text-xl">✓</span>
              <span class="text-gray-600 dark:text-gray-300">技術コンサルティング</span>
            </li>
            <li class="flex items-start">
              <span class="text-primary-500 mr-2 text-xl">✓</span>
              <span class="text-gray-600 dark:text-gray-300">システム保守・運用</span>
            </li>
          </ul>
        </div>
      </div>

      <form id="contact-form" class="bg-gray-50 dark:bg-gray-800 rounded-2xl p-8" action="/api/contact" method="POST">
        <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">お問い合わせフォーム</h2>
        <div class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">会社名・お名前 <span class="text-red-500">*</span></label>
              <input type="text" id="name" name="name" required class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">メールアドレス <span class="text-red-500">*</span></label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
            </div>
          </div>
          <div>
            <label for="company" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">会社名</label>
            <input type="text" id="company" name="company" class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="service" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ご希望のサービス</label>
            <select id="service" name="service" class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500">
              <option value="">選択してください</option>
              <option value="web-development">Webアプリケーション開発</option>
              <option value="mobile-development">モバイルアプリ開発</option>
              <option value="ai-ml">AI・機械学習システム</option>
              <option value="blockchain">ブロックチェーンソリューション</option>
              <option value="consulting">技術コンサルティング</option>
              <option value="maintenance">システム保守・運用</option>
              <option value="other">その他</option>
            </select>
          </div>
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">件名</label>
            <input type="text" id="subject" name="subject" class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">お問い合わせ内容 <span class="text-red-500">*</span></label>
            <textarea id="message" name="message" rows="6" required class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-primary-500" placeholder="プロジェクトの詳細やご要望をお聞かせください"></textarea>
          </div>
          <button type="submit" id="contact-submit-button" class="w-full py-3 px-6 rounded-lg bg-gradient-to-r from-primary-600 to-primary-700 text-white font-medium hover:from-primary-700 hover:to-primary-800 transition-all transform hover:scale-[1.02]">
            送信する
          </button>
        </div>
      </form>
      <div id="contact-form-message" class="mt-6 text-center text-lg font-semibold"></div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contact-form') as HTMLFormElement;
    const contactSubmitButton = document.getElementById('contact-submit-button') as HTMLButtonElement;
    const contactFormMessage = document.getElementById('contact-form-message');

    if (contactForm && contactSubmitButton && contactFormMessage) {
      contactForm.addEventListener('submit', async (event) => {
        event.preventDefault();

        contactSubmitButton.disabled = true;
        contactSubmitButton.textContent = '送信中...';
        contactFormMessage.textContent = '';

        const formData = new FormData(contactForm);

        try {
          const response = await fetch(contactForm.action, {
            method: contactForm.method,
            body: formData,
          });

          const data = await response.json();

          if (response.ok) {
            contactFormMessage.textContent = 'お問い合わせありがとうございます。内容を確認後、ご連絡いたします。';
            contactFormMessage.className = 'mt-6 text-center text-lg font-semibold text-green-600 dark:text-green-400';
            contactForm.reset();
          } else {
            contactFormMessage.textContent = `送信に失敗しました: ${data.message || '不明なエラー'}`;
            contactFormMessage.className = 'mt-6 text-center text-lg font-semibold text-red-600 dark:text-red-400';
          }
        } catch (error) {
          console.error('Fetch error:', error);
          contactFormMessage.textContent = 'お問い合わせ中にエラーが発生しました。もう一度お試しください。'
          contactFormMessage.className = 'mt-6 text-center text-lg font-semibold text-red-600 dark:text-red-400';
        } finally {
          contactSubmitButton.disabled = false;
          contactSubmitButton.innerHTML = `送信する`;
        }
      });
    }
  });
</script>