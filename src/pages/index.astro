---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.tsx';
import web3Image from '../assets/business/web3.png';
import aiImage from '../assets/business/ai.png';
import cloudImage from '../assets/business/cloud.png';
import { Image } from 'astro:assets';

const projects = [
  {
    title: 'フロントエンド開発',
    description: 'React、Vue.js、Next.jsを活用したモダンなWebアプリケーション開発',
    tech: ['React', 'Vue.js', 'Next.js', 'TypeScript'],
    gradient: 'from-blue-400 to-cyan-300',
    icon: '💻'
  },
  {
    title: 'バックエンド開発',
    description: 'Node.js、Python、Javaによるスケーラブルなサーバーサイド開発',
    tech: ['Node.js', 'Python', 'Java', 'PostgreSQL'],
    gradient: 'from-green-400 to-emerald-300',
    icon: '⚙️'
  },
  {
    title: 'クラウドインフラ',
    description: 'AWS、Azure、GCPを活用したクラウドネイティブなインフラ構築',
    tech: ['AWS', 'Docker', 'Kubernetes', 'Terraform'],
    gradient: 'from-purple-400 to-pink-300',
    icon: '☁️'
  },
  {
    title: 'データサイエンス',
    description: '機械学習、AI、データ分析によるビジネス価値の創出',
    tech: ['Python', 'TensorFlow', 'Pandas', 'Jupyter'],
    gradient: 'from-orange-400 to-red-300',
    icon: '📊'
  }
];
---

<Layout title="Ludo Technologies - Modern Tech Solutions">
  <!-- Mouse Follower -->
  <div id="mouse-follower" class="fixed w-12 h-12 bg-gradient-to-r from-primary-400 to-accent-400 rounded-full pointer-events-none z-50 opacity-0 mix-blend-difference"></div>
  
  <!-- Particle Container -->
  <div id="particle-container" class="fixed inset-0 pointer-events-none z-10"></div>

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-white dark:bg-gray-900 min-h-screen flex items-center">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-primary-400/20 to-accent-400/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-br from-accent-400/20 to-primary-400/20 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-br from-purple-400/10 to-pink-400/10 rounded-full blur-2xl animate-float" style="animation-delay: -1.5s;"></div>
      
      <!-- 3D Floating Elements -->
      <div class="floating-element absolute top-20 right-20 w-20 h-20 bg-gradient-to-br from-blue-400 to-purple-400 rounded-2xl opacity-20 rotate-12"></div>
      <div class="floating-element absolute bottom-32 left-32 w-16 h-16 bg-gradient-to-br from-green-400 to-blue-400 rounded-full opacity-20 -rotate-12"></div>
      <div class="floating-element absolute top-1/3 left-1/4 w-12 h-12 bg-gradient-to-br from-pink-400 to-red-400 rounded-lg opacity-20 rotate-45"></div>
    </div>
    
    <div class="relative container mx-auto px-6 py-24 md:py-32">
      <div class="text-center">
        <div class="mb-8">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-gradient-to-r from-primary-100 to-accent-100 dark:from-primary-900/30 dark:to-accent-900/30 border border-primary-200 dark:border-primary-700 text-primary-700 dark:text-primary-300 text-sm font-medium animate-fade-in-up">
            🚀 次世代テクノロジーソリューション
          </div>
        </div>
        <h1 class="text-5xl md:text-7xl font-bold mb-8 text-primary-600 dark:text-primary-400 leading-tight">
          <span class="block animate-text-reveal" id="hero-title-1">
            <span class="hidden sm:inline">次世代テクノロジーで</span>
            <span class="sm:hidden">次世代<br>テクノロジーで</span>
          </span>
          <span class="block animate-text-reveal" id="hero-title-2" style="animation-delay: 0.3s;">
            <span class="hidden sm:inline">ビジネスを革新する</span>
            <span class="sm:hidden">ビジネスを<br>革新する</span>
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed animate-fade-in-up" style="animation-delay: 0.6s;">
          政策分析、フィンテック、ブロックチェーン、AIの最先端ソリューションを提供し、
          <span class="text-primary-600 dark:text-primary-400 font-semibold">未来を創造</span>します
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center animate-fade-in-up" style="animation-delay: 0.9s;">
          <a href="/projects" class="group inline-flex items-center px-8 py-4 rounded-xl bg-gradient-to-r from-primary-600 to-primary-700 text-white font-semibold text-lg hover:from-primary-700 hover:to-primary-800 transition-all transform hover:scale-105 hover:shadow-2xl shadow-lg magnet-button">
            プロジェクトを見る
            <svg class="w-6 h-6 ml-3 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href="/contact" class="group inline-flex items-center px-8 py-4 rounded-xl border-2 border-primary-600 text-primary-600 dark:text-primary-400 font-semibold text-lg hover:bg-primary-50 dark:hover:bg-gray-800 transition-all transform hover:scale-105 magnet-button">
            お問い合わせ
            <svg class="w-6 h-6 ml-3 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </a>
        </div>
        
        <!-- Stats Section -->
        <div class="grid grid-cols-3 gap-8 mt-16 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 1.2s;">
          <div class="text-center stat-item">
            <div class="text-3xl md:text-4xl font-bold text-primary-600 dark:text-primary-400 mb-2 counter" data-target="50">0</div>
            <div class="text-gray-600 dark:text-gray-400 text-sm">完了プロジェクト</div>
          </div>
          <div class="text-center stat-item">
            <div class="text-3xl md:text-4xl font-bold text-accent-600 dark:text-accent-400 mb-2 counter" data-target="95">0</div>
            <div class="text-gray-600 dark:text-gray-400 text-sm">顧客満足度</div>
          </div>
          <div class="text-center stat-item">
            <div class="text-3xl md:text-4xl font-bold text-purple-600 dark:text-purple-400 mb-2 counter" data-target="24">0</div>
            <div class="text-gray-600 dark:text-gray-400 text-sm">技術スタック</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Preview -->
  <section class="py-24 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 relative overflow-hidden">
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    <div class="relative container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">
          技術エクスパート領域
      </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          各分野の専門技術を駆使し、お客様のビジネス課題を解決します
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project, index) => (
          <div class="project-card" data-index={index}>
          <ProjectCard client:visible {...project} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SVG Divider -->
  <div class="w-full overflow-hidden leading-none">
    <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-12 md:h-24">
      <path fill="#f3f4f6" d="M0,100 C480,0 960,100 1440,0 L1440,100 L0,100 Z"></path>
    </svg>
  </div>

  <!-- Web3事業 Section -->
  <section class="py-24 bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 relative overflow-hidden">
    <!-- アニメーション背景 -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-purple-400/20 to-blue-600/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-400/20 to-purple-600/20 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-br from-purple-400/10 to-pink-400/10 rounded-full blur-2xl animate-float" style="animation-delay: -1.5s;"></div>
      
      <!-- 3D Floating Elements -->
      <div class="floating-element absolute top-20 right-20 w-20 h-20 bg-gradient-to-br from-purple-400 to-blue-400 rounded-2xl opacity-20 rotate-12"></div>
      <div class="floating-element absolute bottom-32 left-32 w-16 h-16 bg-gradient-to-br from-blue-400 to-purple-400 rounded-full opacity-20 -rotate-12"></div>
      <div class="floating-element absolute top-1/3 left-1/4 w-12 h-12 bg-gradient-to-br from-pink-400 to-purple-400 rounded-lg opacity-20 rotate-45"></div>
    </div>
    
    <div class="relative container mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- テキストコンテンツ -->
        <div class="space-y-8 business-content">
          <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-500 to-blue-600 text-white rounded-full text-sm font-medium mb-4 business-badge">
            🔗 Web3事業
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white leading-tight business-title">
            <span class="hidden sm:inline">ブロックチェーンで<br>
            <span class="bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
              未来を創造
            </span></span>
            <span class="sm:hidden">ブロックチェーンで<br>
            <span class="bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
              未来を<br>創造
            </span></span>
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed business-description">
            分散型技術を活用し、透明性と信頼性を重視したWeb3ソリューションを提供します。
            ブロックチェーン、NFT、DeFiなど、次世代のデジタルエコシステムを構築します。
          </p>
          
          <!-- 技術スタック -->
          <div class="space-y-4 business-tech">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">主要技術</h3>
            <div class="flex flex-wrap gap-3">
              <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full text-sm tech-tag">Ethereum</span>
              <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-sm tech-tag">Solidity</span>
              <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full text-sm tech-tag">Web3.js</span>
              <span class="px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-300 rounded-full text-sm tech-tag">IPFS</span>
              <span class="px-3 py-1 bg-pink-100 dark:bg-pink-900/30 text-pink-700 dark:text-pink-300 rounded-full text-sm tech-tag">NFT</span>
              <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 rounded-full text-sm tech-tag">DeFi</span>
            </div>
          </div>

          <!-- サービス一覧 -->
          <div class="grid grid-cols-2 gap-4 business-services">
            <div class="flex items-start space-x-3 service-item">
              <div class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-white text-sm mt-0.5">✓</div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">ブロックチェーン開発</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">スマートコントラクト・dApps開発</p>
              </div>
            </div>
            <div class="flex items-start space-x-3 service-item">
              <div class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-white text-sm mt-0.5">✓</div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">NFT/トークン発行</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">デジタルアセット・トークン設計</p>
              </div>
            </div>
            <div class="flex items-start space-x-3 service-item">
              <div class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-white text-sm mt-0.5">✓</div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">分散型アプリケーション</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">dApps・DeFiプロトコル開発</p>
              </div>
            </div>
            <div class="flex items-start space-x-3 service-item">
              <div class="w-6 h-6 bg-purple-500 rounded-full flex items-center justify-center text-white text-sm mt-0.5">✓</div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">セキュリティ監査</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">スマートコントラクト監査</p>
              </div>
            </div>
          </div>

          <!-- CTA -->
          <div class="pt-4">
            <a href="/contact" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white font-semibold rounded-lg hover:from-purple-700 hover:to-blue-700 transition-all transform hover:scale-105 magnet-button business-cta">
              お問い合わせ
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- 画像・ビジュアル -->
        <div class="relative business-visual hidden md:block">
          <div class="bg-gradient-to-br from-purple-500/10 to-blue-500/10 rounded-3xl p-8 border border-purple-200 dark:border-purple-700 backdrop-blur-sm">
            <Image src={web3Image} alt="Web3事業イメージ" width={600} height={600} class="w-full h-auto rounded-2xl shadow-lg mb-6 business-image" />
            <div class="space-y-4">
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-sm text-gray-600 dark:text-gray-400">ブロックチェーンネットワーク接続済み</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="text-sm text-gray-600 dark:text-gray-400">スマートコントラクト実行中</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <span class="text-sm text-gray-600 dark:text-gray-400">NFTトランザクション処理中</span>
              </div>
            </div>
          </div>
          
          <!-- 浮遊する要素 -->
          <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-purple-400 to-pink-500 rounded-full opacity-20 animate-pulse floating-element"></div>
          <div class="absolute -bottom-4 -left-4 w-12 h-12 bg-gradient-to-br from-blue-400 to-cyan-500 rounded-full opacity-20 animate-pulse delay-1000 floating-element"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- SVG Divider -->
  <div class="w-full overflow-hidden leading-none rotate-180">
    <svg viewBox="0 0 1440 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-12 md:h-24">
      <path fill="#f3f4f6" d="M0,0 C480,100 960,0 1440,100 L1440,0 L0,0 Z"></path>
    </svg>
  </div>

  <!-- AI事業 Section -->
  <section class="py-24 bg-white dark:bg-gray-900 relative overflow-hidden">
    <!-- アニメーション背景 -->
    <div class="absolute inset-0">
      <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-orange-400/20 to-pink-600/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-br from-pink-400/20 to-orange-600/20 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-br from-orange-400/10 to-red-400/10 rounded-full blur-2xl animate-float" style="animation-delay: -1.5s;"></div>
      
      <!-- 3D Floating Elements -->
      <div class="floating-element absolute top-20 left-20 w-20 h-20 bg-gradient-to-br from-orange-400 to-pink-400 rounded-2xl opacity-20 -rotate-12"></div>
      <div class="floating-element absolute bottom-32 right-32 w-16 h-16 bg-gradient-to-br from-pink-400 to-orange-400 rounded-full opacity-20 rotate-12"></div>
      <div class="floating-element absolute top-1/3 right-1/4 w-12 h-12 bg-gradient-to-br from-red-400 to-orange-400 rounded-lg opacity-20 -rotate-45"></div>
    </div>
    
    <div class="relative container mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- 画像・ビジュアル -->
        <div class="relative order-2 lg:order-1 business-visual hidden md:block">
          <div class="bg-gradient-to-br from-orange-500/10 to-pink-500/10 rounded-3xl p-8 border border-orange-200 dark:border-orange-700 backdrop-blur-sm">
            <Image src={aiImage} alt="AI事業イメージ" width={600} height={600} class="w-full h-auto rounded-2xl shadow-lg mb-6 business-image" />
            <div class="space-y-4">
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span class="text-sm text-gray-600 dark:text-gray-400">機械学習モデル学習中</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="text-sm text-gray-600 dark:text-gray-400">データ分析実行中</span>
              </div>
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <span class="text-sm text-gray-600 dark:text-gray-400">AI予測生成中</span>
              </div>
            </div>
          </div>
          
          <!-- 浮遊する要素 -->
          <div class="absolute -top-4 -left-4 w-16 h-16 bg-gradient-to-br from-orange-400 to-red-500 rounded-full opacity-20 animate-pulse floating-element"></div>
          <div class="absolute -bottom-4 -right-4 w-12 h-12 bg-gradient-to-br from-pink-400 to-purple-500 rounded-full opacity-20 animate-pulse delay-1000 floating-element"></div>
        </div>

        <!-- テキストコンテンツ -->
        <div class="space-y-8 order-1 lg:order-2 business-content">
          <div class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-orange-500 to-pink-600 text-white rounded-full text-sm font-medium mb-4 business-badge">
            🤖 AI事業
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white leading-tight business-title">
            <span class="hidden sm:inline">AIで<br>
            <span class="bg-gradient-to-r from-orange-600 to-pink-600 bg-clip-text text-transparent">
              ビジネスを革新
            </span></span>
            <span class="sm:hidden">AIで<br>
            <span class="bg-gradient-to-r from-orange-600 to-pink-600 bg-clip-text text-transparent">
              ビジネスを<br>革新
            </span></span>
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed business-description">
            機械学習、生成AI、データ分析を活用し、ビジネス課題を解決します。
            予測分析から自然言語処理まで、幅広いAIソリューションを提供します。
          </p>
          
          <!-- 技術スタック -->
          <div class="space-y-4 business-tech">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">主要技術</h3>
            <div class="flex flex-wrap gap-3">
              <span class="px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-300 rounded-full text-sm tech-tag">TensorFlow</span>
              <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-sm tech-tag">PyTorch</span>
              <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full text-sm tech-tag">scikit-learn</span>
              <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full text-sm tech-tag">OpenAI API</span>
              <span class="px-3 py-1 bg-pink-100 dark:bg-pink-900/30 text-pink-700 dark:text-pink-300 rounded-full text-sm tech-tag">LangChain</span>
              <span class="px-3 py-1 bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-300 rounded-full text-sm tech-tag">Pandas</span>
            </div>
          </div>

          <!-- サービス一覧 -->
          <div class="grid grid-cols-2 gap-4 business-services">
            <div class="flex items-start space-x-3 service-item">
              <div class="w-6 h-6 bg-orange-500 rounded-full flex items-center justify-center text-white text-sm mt-0.5">✓</div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">機械学習開発</h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">予測モデル・分類モデル開発</p>
              </div>
