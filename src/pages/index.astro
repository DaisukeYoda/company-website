<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // マウスフォロワー
    const mouseFollower = document.getElementById('mouse-follower');
    let mouseX = 0, mouseY = 0;
    let currentX = 0, currentY = 0;

    document.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    gsap.ticker.add(() => {
      currentX += (mouseX - currentX) * 0.1;
      currentY += (mouseY - currentY) * 0.1;
      
      gsap.set(mouseFollower, {
        x: currentX - 24,
        y: currentY - 24
      });
    });

    // マウスフォロワーの表示
    gsap.to(mouseFollower, {
      opacity: 1,
      duration: 1,
      delay: 0.5
    });

    // パーティクルエフェクト
    const particleContainer = document.getElementById('particle-container');
    for (let i = 0; i < 30; i++) {
      const particle = document.createElement('div');
      particle.style.cssText = `
        position: absolute;
        width: 4px;
        height: 4px;
        background: linear-gradient(45deg, #667eea, #764ba2);
        border-radius: 50%;
        pointer-events: none;
        opacity: 0;
      `;
      
      particleContainer.appendChild(particle);

      gsap.set(particle, {
        x: Math.random() * window.innerWidth,
        y: Math.random() * window.innerHeight,
        scale: 0
      });

      gsap.to(particle, {
        x: Math.random() * window.innerWidth,
        y: Math.random() * window.innerHeight,
        scale: Math.random() * 2 + 0.5,
        opacity: Math.random() * 0.5 + 0.2,
        duration: Math.random() * 3 + 2,
        repeat: -1,
        yoyo: true,
        ease: "power1.inOut",
        delay: Math.random() * 2
      });
    }

    // 基本的なフェードインアニメーション
    gsap.fromTo('#hero-title-1', 
      { opacity: 0, y: 50 },
      { opacity: 1, y: 0, duration: 1, delay: 0.5, ease: "power3.out" }
    );
    gsap.fromTo('#hero-title-2', 
      { opacity: 0, y: 50 },
      { opacity: 1, y: 0, duration: 1, delay: 0.8, ease: "power3.out" }
    );

    // マグネットエフェクト
    const magnetButtons = document.querySelectorAll('.magnet-button');
    magnetButtons.forEach(button => {
      button.addEventListener('mousemove', (e) => {
        const event = e as MouseEvent;
        const rect = button.getBoundingClientRect();
        const x = event.clientX - rect.left - rect.width / 2;
        const y = event.clientY - rect.top - rect.height / 2;

        gsap.to(button, {
          x: x * 0.3,
          y: y * 0.3,
          duration: 0.3,
          ease: "power2.out"
        });
      });

      button.addEventListener('mouseleave', () => {
        gsap.to(button, {
          x: 0,
          y: 0,
          duration: 0.3,
          ease: "power2.out"
        });
      });
    });

    // カウンターアニメーション
    const counters = document.querySelectorAll('.counter');
    counters.forEach(counter => {
      const target = parseInt(counter.getAttribute('data-target') || '0');
      gsap.to(counter, {
        innerHTML: target,
        duration: 2,
        snap: { innerHTML: 1 },
        ease: "power2.out",
        scrollTrigger: {
          trigger: counter,
          start: "top 80%",
          toggleActions: "play none none reverse"
        }
      });
    });

    // プロジェクトカードのアニメーション
    const projectCards = document.querySelectorAll('.project-card');
    projectCards.forEach((card, index) => {
      gsap.fromTo(card,
        {
          y: 100,
          opacity: 0,
          scale: 0.8,
          rotationY: 45
        },
        {
          y: 0,
          opacity: 1,
          scale: 1,
          rotationY: 0,
          duration: 1,
          delay: index * 0.2,
          ease: "back.out(1.7)",
          scrollTrigger: {
            trigger: card,
            start: "top 80%",
            end: "bottom 20%",
            toggleActions: "play none none reverse"
          }
        }
      );
    });

    // フィーチャーカードのアニメーション
    const featureCards = document.querySelectorAll('.feature-card');
    featureCards.forEach((card, index) => {
      gsap.fromTo(card,
        {
          y: 100,
          opacity: 0,
          scale: 0.8
        },
        {
          y: 0,
          opacity: 1,
          scale: 1,
          duration: 1,
          delay: index * 0.2,
          ease: "back.out(1.7)",
          scrollTrigger: {
            trigger: card,
            start: "top 80%",
            end: "bottom 20%",
            toggleActions: "play none none reverse"
          }
        }
      );
    });

    // フィーチャーアイコンのホバーアニメーション
    const featureIcons = document.querySelectorAll('.feature-icon');
    featureIcons.forEach(icon => {
      icon.addEventListener('mouseenter', () => {
        gsap.to(icon, {
          rotation: 360,
          scale: 1.2,
          duration: 0.6,
          ease: "back.out(1.7)"
        });
      });

      icon.addEventListener('mouseleave', () => {
        gsap.to(icon, {
          rotation: 0,
          scale: 1,
          duration: 0.6,
          ease: "back.out(1.7)"
        });
      });
    });

    // 統計アイテムのホバーアニメーション
    const statItems = document.querySelectorAll('.stat-item');
    statItems.forEach(item => {
      item.addEventListener('mouseenter', () => {
        gsap.to(item, {
          scale: 1.05,
          duration: 0.3,
          ease: "power2.out"
        });
      });

      item.addEventListener('mouseleave', () => {
        gsap.to(item, {
          scale: 1,
          duration: 0.3,
          ease: "power2.out"
        });
      });
    });

    // スクロールベースの3Dパララックス
    const floatingElements = document.querySelectorAll('.floating-element');
    floatingElements.forEach((element, index) => {
      gsap.to(element, {
        rotationY: 360,
        rotationX: 180,
        z: -1000 * (0.5 + index * 0.1),
        ease: "none",
        scrollTrigger: {
          trigger: element,
          start: "top bottom",
          end: "bottom top",
          scrub: 1
        }
      });
    });

    // 波紋エフェクト
    const buttons = document.querySelectorAll('a[href], button');
    buttons.forEach(button => {
      button.addEventListener('click', (e) => {
        const event = e as MouseEvent;
        const rect = button.getBoundingClientRect();
        const x = event.clientX - rect.left;
        const y = event.clientY - rect.top;

        const ripple = document.createElement('span');
        ripple.style.position = 'absolute';
        ripple.style.left = x + 'px';
        ripple.style.top = y + 'px';
        ripple.style.width = '0px';
        ripple.style.height = '0px';
        ripple.style.borderRadius = '50%';
        ripple.style.background = 'rgba(255, 255, 255, 0.6)';
        ripple.style.transform = 'translate(-50%, -50%)';
        ripple.style.pointerEvents = 'none';

        (button as HTMLElement).style.position = 'relative';
        button.appendChild(ripple);

        gsap.to(ripple, {
          width: '300px',
          height: '300px',
          opacity: 0,
          duration: 0.8,
          ease: "power2.out",
          onComplete: () => {
            button.removeChild(ripple);
          }
        });
      });
    });

    // 事業セクション専用アニメーション
    const businessSections = document.querySelectorAll('section');
    businessSections.forEach((section, sectionIndex) => {
      // 事業セクションかどうかを判定
      if (section.querySelector('.business-content')) {
        
        // コンテンツ要素のアニメーション
        const businessContent = section.querySelector('.business-content');
        const businessVisual = section.querySelector('.business-visual');
        
        if (businessContent) {
          gsap.fromTo(businessContent,
            {
              x: -100,
              opacity: 0,
              scale: 0.9
            },
            {
              x: 0,
              opacity: 1,
              scale: 1,
              duration: 1.2,
              delay: 0.2,
              ease: "back.out(1.7)",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                end: "bottom 20%",
                toggleActions: "play none none reverse"
              }
            }
          );
        }

        if (businessVisual) {
          gsap.fromTo(businessVisual,
            {
              x: 100,
              opacity: 0,
              scale: 0.9,
              rotationY: 15
            },
            {
              x: 0,
              opacity: 1,
              scale: 1,
              rotationY: 0,
              duration: 1.2,
              delay: 0.4,
              ease: "back.out(1.7)",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                end: "bottom 20%",
                toggleActions: "play none none reverse"
              }
            }
          );
        }

        // 個別要素のアニメーション
        const businessBadge = section.querySelector('.business-badge');
        const businessTitle = section.querySelector('.business-title');
        const businessDescription = section.querySelector('.business-description');
        const businessTech = section.querySelector('.business-tech');
        const businessServices = section.querySelector('.business-services');
        const businessCta = section.querySelector('.business-cta');
        const businessImage = section.querySelector('.business-image');

        // バッジアニメーション
        if (businessBadge) {
          gsap.fromTo(businessBadge,
            {
              y: -50,
              opacity: 0,
              scale: 0.5
            },
            {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.8,
              delay: 0.3,
              ease: "back.out(1.7)",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                toggleActions: "play none none reverse"
              }
            }
          );
        }

        // タイトルアニメーション
        if (businessTitle) {
          gsap.fromTo(businessTitle,
            {
              y: 50,
              opacity: 0
            },
            {
              y: 0,
              opacity: 1,
              duration: 1,
              delay: 0.4,
              ease: "power3.out",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                toggleActions: "play none none reverse"
              }
            }
          );
        }

        // 説明文アニメーション
        if (businessDescription) {
          gsap.fromTo(businessDescription,
            {
              y: 30,
              opacity: 0
            },
            {
              y: 0,
              opacity: 1,
              duration: 0.8,
              delay: 0.6,
              ease: "power3.out",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                toggleActions: "play none none reverse"
              }
            }
          );
        }

        // 技術タグアニメーション
        const techTags = section.querySelectorAll('.tech-tag');
        techTags.forEach((tag, index) => {
          gsap.fromTo(tag,
            {
              y: 20,
              opacity: 0,
              scale: 0.8
            },
            {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.6,
              delay: 0.8 + index * 0.1,
              ease: "back.out(1.7)",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                toggleActions: "play none none reverse"
              }
            }
          );
        });

        // サービスアイテムアニメーション
        const serviceItems = section.querySelectorAll('.service-item');
        serviceItems.forEach((item, index) => {
          gsap.fromTo(item,
            {
              x: -30,
              opacity: 0
            },
            {
              x: 0,
              opacity: 1,
              duration: 0.6,
              delay: 1.0 + index * 0.1,
              ease: "power3.out",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                toggleActions: "play none none reverse"
              }
            }
          );
        });

        // CTAアニメーション
        if (businessCta) {
          gsap.fromTo(businessCta,
            {
              y: 30,
              opacity: 0,
              scale: 0.9
            },
            {
              y: 0,
              opacity: 1,
              scale: 1,
              duration: 0.8,
              delay: 1.2,
              ease: "back.out(1.7)",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                toggleActions: "play none none reverse"
              }
            }
          );
        }

        // 画像アニメーション
        if (businessImage) {
          gsap.fromTo(businessImage,
            {
              scale: 0.8,
              opacity: 0,
              rotationY: 20
            },
            {
              scale: 1,
              opacity: 1,
              rotationY: 0,
              duration: 1,
              delay: 0.5,
              ease: "back.out(1.7)",
              scrollTrigger: {
                trigger: section,
                start: "top 80%",
                toggleActions: "play none none reverse"
              }
            }
          );
        }

        // ホバーエフェクト
        const businessImages = section.querySelectorAll('.business-image');
        businessImages.forEach(image => {
          image.addEventListener('mouseenter', () => {
            gsap.to(image, {
              scale: 1.05,
              rotationY: 5,
              duration: 0.3,
              ease: "power2.out"
            });
          });

          image.addEventListener('mouseleave', () => {
            gsap.to(image, {
              scale: 1,
              rotationY: 0,
              duration: 0.3,
              ease: "power2.out"
            });
          });
        });

        // 技術タグホバーエフェクト
        techTags.forEach(tag => {
          tag.addEventListener('mouseenter', () => {
            gsap.to(tag, {
              scale: 1.1,
              y: -2,
              duration: 0.2,
              ease: "power2.out"
            });
          });

          tag.addEventListener('mouseleave', () => {
            gsap.to(tag, {
              scale: 1,
              y: 0,
              duration: 0.2,
              ease: "power2.out"
            });
          });
        });
      }
    });
  });
</script>