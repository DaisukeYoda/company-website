---
import Layout from '../layouts/Layout.astro';
import TechCategory from '../components/TechCategory.tsx';

const techCategories = [
  {
    name: 'フロントエンド',
    icon: '🖥️',
    technologies: [
      { name: 'React', level: 90, color: 'from-cyan-400 to-cyan-600' },
      { name: 'Next.js', level: 95, color: 'from-gray-600 to-gray-800' },
      { name: 'TypeScript', level: 90, color: 'from-blue-400 to-blue-600' },
      { name: 'Tailwind CSS', level: 95, color: 'from-teal-400 to-teal-600' },
      { name: 'Astro', level: 85, color: 'from-orange-400 to-orange-600' }
    ]
  },
  {
    name: 'バックエンド',
    icon: '⚙️',
    technologies: [
      { name: 'Python', level: 95, color: 'from-yellow-400 to-yellow-600' },
      { name: 'FastAPI', level: 90, color: 'from-green-400 to-green-600' },
      { name: 'Node.js', level: 85, color: 'from-green-500 to-green-700' },
      { name: 'MongoDB', level: 85, color: 'from-green-600 to-green-800' },
      { name: 'PostgreSQL', level: 80, color: 'from-blue-500 to-blue-700' }
    ]
  },
  {
    name: 'AI/ML',
    icon: '🤖',
    technologies: [
      { name: 'TensorFlow', level: 75, color: 'from-orange-500 to-orange-700' },
      { name: 'scikit-learn', level: 85, color: 'from-yellow-500 to-orange-600' },
      { name: 'OpenAI API', level: 90, color: 'from-gray-700 to-gray-900' },
      { name: 'LangChain', level: 80, color: 'from-blue-600 to-blue-800' }
    ]
  },
  {
    name: 'ブロックチェーン',
    icon: '🔗',
    technologies: [
      { name: 'Ethereum', level: 85, color: 'from-purple-400 to-purple-600' },
      { name: 'Web3.js', level: 80, color: 'from-orange-400 to-red-600' },
      { name: 'Solidity', level: 75, color: 'from-gray-600 to-gray-800' },
      { name: 'ThirdWeb', level: 85, color: 'from-pink-400 to-purple-600' }
    ]
  },
  {
    name: 'デプロイ/インフラ',
    icon: '🌐',
    technologies: [
      { name: 'Docker', level: 90, color: 'from-blue-400 to-blue-600' },
      { name: 'GitHub Actions', level: 95, color: 'from-gray-700 to-gray-900' },
      { name: 'Vercel', level: 90, color: 'from-gray-800 to-black' },
      { name: 'Railway', level: 85, color: 'from-purple-500 to-purple-700' }
    ]
  }
];
---

<Layout title="技術スタック - Tech Lab">
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-6">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-4 bg-gradient-to-r from-primary-600 to-accent-600 bg-clip-text text-transparent">
        技術スタック
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 text-center mb-12 max-w-2xl mx-auto">
        幅広い技術領域で最適なソリューションを提供
      </p>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {techCategories.map((category) => (
          <TechCategory client:visible {...category} />
        ))}
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-6">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">
        開発アプローチ
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-lg">
          <div class="text-3xl mb-4">🎯</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">テスト駆動開発</h3>
          <p class="text-gray-600 dark:text-gray-300">全てのプロジェクトで包括的なテストを実施し、高品質を保証</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-lg">
          <div class="text-3xl mb-4">🔄</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">CI/CDパイプライン</h3>
          <p class="text-gray-600 dark:text-gray-300">自動化されたビルドとデプロイで迅速なリリース</p>
        </div>
        <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-lg">
          <div class="text-3xl mb-4">🔒</div>
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">セキュリティファースト</h3>
          <p class="text-gray-600 dark:text-gray-300">セキュリティを最優先に、安全なシステム構築</p>
        </div>
      </div>
    </div>
  </section>
</Layout>