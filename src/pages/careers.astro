<style>
  .dot-pattern {
    background-image: radial-gradient(#ffffff 1px, transparent 1px);
    background-size: 20px 20px;
  }

  .feature-card,
  .job-card {
    opacity: 0;
    transform: translateY(50px);
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // なぜLudo Technologiesで働くのか？セクションのアニメーション
    gsap.utils.toArray('.feature-card').forEach((card) => {
      gsap.fromTo(card as Element, 
        { opacity: 0, y: 50 },
        { 
          opacity: 1, 
          y: 0, 
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: card as Element,
            start: "top 80%",
            toggleActions: "play none none none",
          }
        }
      );
    });

    // 募集職種セクションのアニメーション
    gsap.utils.toArray('.job-card').forEach((card, i) => {
      gsap.fromTo(card as Element, 
        { opacity: 0, x: i % 2 === 0 ? -50 : 50 }, // 左右から交互にフェードイン
        { 
          opacity: 1, 
          x: 0, 
          duration: 1.2,
          ease: "power3.out",
          scrollTrigger: {
            trigger: card as Element,
            start: "top 80%",
            toggleActions: "play none none none",
          }
        }
      );
    });

    // Application Form Section のアニメーション
    const applicationForm = document.querySelector('.application-form-section');
    if (applicationForm) {
      gsap.fromTo(applicationForm,
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 1.2,
          ease: "power3.out",
          scrollTrigger: {
            trigger: applicationForm,
            start: "top 80%",
            toggleActions: "play none none none",
          }
        }
      );
    }

    // 動機入力フォームの文字数カウンター
    const motivationTextarea = document.getElementById('motivation') as HTMLTextAreaElement;
    const motivationCharsLeft = document.getElementById('motivation-chars-left');
    if (motivationTextarea && motivationCharsLeft) {
      motivationTextarea.addEventListener('input', () => {
        const remaining = 200 - motivationTextarea.value.length;
        motivationCharsLeft.textContent = remaining.toString();
      });
    }

    // 応募フォームの送信処理
    const applicationFormElement = document.getElementById('application-form') as HTMLFormElement;
    const submitButtonElement = document.getElementById('submit-button') as HTMLButtonElement;
    const formMessageElement = document.getElementById('form-message');

    if (applicationFormElement && submitButtonElement && formMessageElement) {
      applicationFormElement.addEventListener('submit', async (event) => {
        event.preventDefault();

        submitButtonElement.disabled = true;
        submitButtonElement.textContent = '送信中...';
        formMessageElement.textContent = '';

        const formData = new FormData(applicationFormElement);

        try {
          const response = await fetch(applicationFormElement.action, {
            method: applicationFormElement.method,
            body: formData,
          });

          const data = await response.json();

          if (response.ok) {
            formMessageElement.textContent = '応募が完了しました！ありがとうございます。';
            formMessageElement.className = 'mt-6 text-center text-lg font-semibold text-green-600 dark:text-green-400';
            applicationFormElement.reset();
            if (motivationCharsLeft) motivationCharsLeft.textContent = '200';
          } else {
            formMessageElement.textContent = `応募に失敗しました: ${data.message || '不明なエラー'}`;
            formMessageElement.className = 'mt-6 text-center text-lg font-semibold text-red-600 dark:text-red-400';
          }
        } catch (error) {
          console.error('Fetch error:', error);
          formMessageElement.textContent = '応募中にエラーが発生しました。もう一度お試しください。'
          formMessageElement.className = 'mt-6 text-center text-lg font-semibold text-red-600 dark:text-red-400';
        } finally {
          submitButtonElement.disabled = false;
          submitButtonElement.innerHTML = `応募する <svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>`;
        }
      });
    }
  });
</script> 